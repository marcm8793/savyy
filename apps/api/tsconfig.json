{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "rootDirs": ["src", "db", "drizzle"],
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*",
    "drizzle/**/*",
    "db/**/*",
    "scripts/**/*",
    "__tests__/**/*",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules"]
}
