{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "rootDirs": ["src", "config", "drizzle"],
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*", "drizzle/**/*", "config/**/*"],
  "exclude": ["node_modules"]
}
